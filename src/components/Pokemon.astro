---
interface Props {
  name: string;
  url: string;
  useBlur?: boolean;
}

const { name, url, useBlur = false } = Astro.props as Props;
const id = url.split("/").at(-2);

const srcImage = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/shiny/${id}.png`;
---

<a
  class="d-flex justify-center align-middle text-center p-3
  border-gray-600 rounded border"
  href=`/pokemon/${name}`
>
  <img
    src={srcImage}
    class=`cursor-pointer ${useBlur && "blur-sm opacity-60"}
    transition-all duration-200 delay-0 ease-in
    hover:opacity-100 hover:blur-0`
    alt={name}
  />
  <span class="text-slate-200 tracking-[.25rem] capitalize">{name}</span>
</a>
